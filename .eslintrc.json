{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": 0,
        "react/prop-types": 0,
        "arrow-body-style": 0
    },
    "globals": {
        "document": true
    },
    "settings": {
        "react":{
            "version": "detect"
        }
    },
    "overrides":[
        {
            "files":[
                "*.jsx",
                "*.js"
            ]
        }
    ]
    
}